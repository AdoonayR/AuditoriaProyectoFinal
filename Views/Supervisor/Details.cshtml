@model IEnumerable<AuditoriaQuimicos.Models.Quimico>

@{
    ViewData["Title"] = "Detalles de Auditoría";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/details.css">

    <!-- Incluye jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Incluye los archivos de DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <header>
        <a href="javascript:history.back()" class="back-button">
            <img src="~/images/previous.png" alt="Regresar" /> <!-- Ícono de regresar -->
        </a>
        <h1>Detalles de Auditoría - @(Model.FirstOrDefault()?.AuditDate?.ToString("MM dd yyyy") ?? "Sin Fecha")</h1>
    </header>
    <table class="table-details display">
        <thead>
            <tr>
                <th>Número de Parte</th>
                <th>Empaque</th>
                <th>Caducidad</th>
                <th>Lote</th>
                <th>FIFO</th>
                <th>Mezclado</th>
                <th>Sello de QC</th>
                <th>Limpieza</th>
                <th>Comentarios</th>
                <th>Resultado</th>
                <th>Almacén</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quimico in Model)
            {
                <tr class="@(quimico.Result == "Aceptado" ? "accepted" : quimico.Result == "Próximo a vencer" ? "expiring-soon" : "rejected")">
                    <td>@quimico.PartNumber</td>
                    <td>@quimico.Packaging</td>
                    <td>@quimico.Expiration?.ToString("MM-dd-yyyy")</td>
                    <td>@quimico.Lot</td>
                    <td>@quimico.Fifo</td>
                    <td>@quimico.Mixed</td>
                    <td>@quimico.QcSeal</td>
                    <td>@quimico.Clean</td>
                    <td>@quimico.Comments</td>
                    <td>@quimico.Result</td>
                    <td>@quimico.Almacen</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Inicializa DataTables -->
    <script>
        $(document).ready(function () {
            $('.table-details').DataTable({
                "paging": true,
                "searching": true,
                "info": true,
                "ordering": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.1/i18n/Spanish.json"  
                }
            });
        });
    </script>
    <script src="~/js/sesionkiller.js"></script>
</body>
</html>
