@model IEnumerable<IGrouping<DateTime?, AuditoriaQuimicos.Models.Quimico>>

@{
    ViewData["Title"] = "Auditoría Mensual de Químicos - Incoming Supervisor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/supervisor.css">
</head>
<body>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>
    <table class="audit-table">
        <thead>
            <tr>
                <th>Fecha de Auditoría</th>
                <th>Estado de Aprobación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                var isApprovedIncoming = group != null && group.Any() && group.All(q => q.Aprobaciones != null && q.Aprobaciones.Any(a => a.ApprovalType == "Incoming"));

                <tr>
                    <td>@group.Key?.ToString("dd-MM-yyyy")</td>
                    <td>
                        @if (isApprovedIncoming)
                        {
                            <span class="approved-incoming">Aprobado por Incoming</span>
                        }
                        else
                        {
                            <span class="not-approved">No Aprobado</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("DetailsIncoming", new { date = group.Key?.ToString("dd-MM-yyyy") })" class="details-btn">Ver Detalles</a>
                        @if (!isApprovedIncoming)
                        {
                            <button class="approve-btn" data-date="@group.Key?.ToString("dd-MM-yyyy")" data-role="Incoming">Aprobar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="~/js/supervisor.js"></script>
</body>
</html>
