<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auditoría de Almacén</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Hoja de estilo personalizada -->
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 custom-navbar">
                <div class="container">
                    <!-- Botón para colapsar el menú en pantallas pequeñas -->
                    <button class="navbar-toggler" type="button"
                            data-toggle="collapse"
                            data-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Enlaces del menú -->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <!-- Prioridades -->
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area=""
                                   asp-controller="Home"
                                   asp-action="IndexPrioridades">
                                    Prioridades
                                </a>
                            </li>

                            <!-- Auditorías anteriores -->
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area=""
                                   asp-controller="Home"
                                   asp-action="AuditoriasAnteriores">
                                    Auditorías anteriores
                                </a>
                            </li>

                            <!-- Acerca de -->
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area=""
                                   asp-controller="Home"
                                   asp-action="AcercaDe">
                                    Acerca de
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted custom-footer">
            <div class="container text-center">
                &copy; 2024 - Auditoría de Almacén
            </div>
        </footer>
    </div>

    <!-- Scripts de Bootstrap y jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site (si lo requieres) -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Para secciones de scripts específicas -->
    @RenderSection("Scripts", required: false)
</body>
</html>
