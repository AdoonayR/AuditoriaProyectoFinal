                            <option value="Limpio">Limpio</option>
                            <option value="Sucio">Sucio</option>
                        </select>
                    </div>
                    <div class="form-group comments" style="display:none;">
                        <label for="comments2">Comentarios</label>
                        <textarea id="comments2" name="comments2" rows="3" readonly></textarea> <!-- Campo de texto para comentarios, solo lectura -->
                    </div>
