                            <option value="Limpio">Limpio</option>
                            <option value="Sucio">Sucio</option>
                        </select>
                    </div>
                    <div class="form-group comments" style="display:none;">
                        <label for="comments3">Comentarios</label>
                        <textarea id="comments3" name="comments3" rows="3" readonly></textarea> <!-- Campo de texto para comentarios, solo lectura -->
                    </div>
                    <button type="submit">Enviar</button> <!-- Botón de envío del formulario -->
                    <p class="result"></p> <!-- Lugar para mostrar el resultado -->
