@{
    ViewData["Title"] = "Auditoría Mensual de Químicos"; // Establece el título de la página
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8"> <!-- Establece la codificación de caracteres a UTF-8 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Configuración de la vista para dispositivos móviles -->
    <title>@ViewData["Title"]</title> <!-- Título de la página -->
    <link rel="stylesheet" href="~/css/style.css"> <!-- Enlace a la hoja de estilos CSS -->
</head>
<body>
    <header>
        <div class="header-title">
            <h1>Auditoría a Almacén</h1> <!-- Título principal -->
            <span id="currentDate"></span> <!-- Lugar para mostrar la fecha actual -->
            <img src="~/images/AmphenolLogo.png" alt="Logo" class="header-logo" /> <!-- Logo de la empresa -->
        </div>
        <div class="form-row">
            <label for="area">Área:</label>
            <select id="area" name="area" required>
                <!-- Campo de selección para el área -->
                <option value="">Seleccione una opción</option>
                <option value="Almacen Telaire">Almacen Telaire</option>
                <option value="Almacen Temperatura">Almacen Temperatura</option>
            </select>
            <label for="auditor">Auditor:</label>
            <input type="text" id="auditor" name="auditor" readonly> <!-- Campo de texto para mostrar el nombre del auditor, de solo lectura -->
        </div>
    </header>

    <div class="accordion">
        <!-- Químico 1 -->
        <div class="section-status">
            <h2>Químico 1</h2> <!-- Título del primer químico -->
            <div class="panel">
                <form id="auditForm1" class="auditForm">
                    <div class="form-group">
                        <label for="partNumber1">Número de Parte</label>
                        <input type="text" id="partNumber1" name="partNumber1" required> <!-- Campo de texto para el número de parte -->
                    </div>
                    <div class="form-group">
                        <label for="packaging1">Empaque</label>
                        <select id="packaging1" name="packaging1" required>
                            <!-- Campo de selección para el estado del empaque -->
                            <option value="">Seleccione una opción</option>
                            <option value="OK">OK</option>
                            <option value="Rechazado">Rechazado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="expiration1">Caducidad (MM/DD/YYYY)</label>
                        <input type="date" id="expiration1" name="expiration1" required> <!-- Campo de fecha para la caducidad -->
                    </div>
                    <div class="form-group">
                        <label for="lot1">Lote</label>
                        <input type="text" id="lot1" name="lot1" required> <!-- Campo de texto para el lote -->
                    </div>
                    <div class="form-group">
                        <label for="fifo1">FIFO seguido</label>
                        <select id="fifo1" name="fifo1" required>
                            <!-- Campo de selección para FIFO -->
                            <option value="">Seleccione una opción</option>
                            <option value="Sí">Sí</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="mixed1">Mezclado</label>
                        <select id="mixed1" name="mixed1" required>
                            <!-- Campo de selección para mezclado -->
                            <option value="">Seleccione una opción</option>
                            <option value="Sí">Sí</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="qcSeal1">Sello de QC</label>
                        <select id="qcSeal1" name="qcSeal1" required>
                            <!-- Campo de selección para sello de QC -->
                            <option value="">Seleccione una opción</option>
                            <option value="Sí">Sí</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="clean1">Limpieza</label>
                        <select id="clean1" name="clean1" required>
                            <!-- Campo de selección para limpieza -->
                            <option value="">Seleccione una opción</option>
                            <option value="Limpio">Limpio</option>
                            <option value="Sucio">Sucio</option>
                        </select>
                    </div>
                    <div class="form-group comments" style="display:none;">
                        <label for="comments1">Comentarios</label>
                        <textarea id="comments1" name="comments1" rows="3" readonly></textarea> <!-- Campo de texto para comentarios, solo lectura -->
                    </div>
                    <button type="submit">Enviar</button> <!-- Botón de envío del formulario -->
                    <p class="result"></p> <!-- Lugar para mostrar el resultado -->
                </form>
            </div>
        </div>

