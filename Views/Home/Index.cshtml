@model IEnumerable<AuditoriaQuimicos.Models.Quimico>

@{
    ViewData["Title"] = "Auditoría Mensual de Químicos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header>
        <div class="header-title">
            <a href="javascript:history.back()" class="back-button">
                <img src="~/images/previous.png" alt="Regresar" />
            </a>
            <h1>Auditoría a Almacén</h1>
            <img src="~/images/AmphenolLogo.png" alt="Logo" class="header-logo" />
        </div>
        <span id="currentDate" class="current-date"></span>
        <div class="form-row">
            <label for="area">Área:</label>
            <select id="area" name="area" required>
                <option value="">Seleccione una opción</option>
                <option value="Almacen Telaire">Almacen Telaire</option>
                <option value="Almacen Temperatura">Almacen Temperatura</option>
            </select>
            <label for="auditor">Auditor:</label>
            <input type="text" id="auditor" name="auditor" readonly>
        </div>
    </header>

    <button id="btnShowProximos" class="pulse-button" onclick="window.location.href='@Url.Action("IndexPrioridades", "Prioridades")'">Prioridades para Auditar</button>

    <div class="accordion">
        <!-- Químico 1 -->
        <div class="section-status">
            <h2 class="chemical-header">
                <span class="chemical-title">Químico 1</span>
                <span class="chemical-comment" id="comment1" style="display: none;"></span>
            </h2>
            <div class="panel">
                <form id="auditForm1" class="audit-form">
                    <div class="form-group">
                        <label for="partNumber1">Número de Parte</label>
                        <input type="text" id="partNumber1" name="partNumber1" required>
                    </div>
                    <div class="form-group">
                        <label for="expiration1">Caducidad (MM/DD/YYYY)</label>
                        <input type="text" id="expiration1" name="expiration1" required class="flatpickr">
                    </div>
                    <div class="form-group">
                        <label for="fifo1">FIFO seguido</label>
                        <select id="fifo1" name="fifo1" required>
                            <option value="">Seleccione una opción</option>
                            <option value="Sí">Sí</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="qcSeal1">Sello de QC</label>
                        <select id="qcSeal1" name="qcSeal1" required>
                            <option value="">Seleccione una opción</option>
                            <option value="Sí">Sí</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="packaging1">Empaque</label>
                        <select id="packaging1" name="packaging1" required>
                            <option value="">Seleccione una opción</option>
                            <option value="OK">OK</option>
                            <option value="Rechazado">Rechazado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="lot1">Lote</label>
                        <input type="text" id="lot1" name="lot1" required>
                    </div>
                    <div class="form-group">
                        <label for="mixed1">Mezclado</label>
                        <select id="mixed1" name="mixed1" required>
                            <option value="">Seleccione una opción</option>
                            <option value="Sí">Sí</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="clean1">Limpieza</label>
                        <select id="clean1" name="clean1" required>
                            <option value="">Seleccione una opción</option>
                            <option value="Limpio">Limpio</option>
                            <option value="Sucio">Sucio</option>
                        </select>
                    </div>
                    <button type="submit">Enviar</button>
                    <p class="result"></p>
                </form>
            </div>
        </div>

